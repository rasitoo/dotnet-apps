<UserControl x:Class="P05_01_DI_Productos_TAPIADOR_rodrigo.UI.Controls.ButtonNav"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P05_01_DI_Productos_TAPIADOR_rodrigo.UI.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:ic="clr-namespace:FluentIcons.Wpf;assembly=FluentIcons.Wpf">
    <RadioButton IsChecked="{Binding IsChecked, ElementName=root, Mode=TwoWay}"
                 GroupName="{Binding GroupName, ElementName=root}"
                 Command="{Binding Command, ElementName=root}">
        <RadioButton.Template>
            <ControlTemplate TargetType="RadioButton">
                <Border Width="100"
                        Height="30">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>
                        <ic:SymbolIcon x:Name="Icon" Symbol="{Binding Icon, ElementName=root}" IconVariant="Regular"  VerticalAlignment="Center" HorizontalAlignment="Center" UseSegoeMetrics="True" />
                        <TextBlock Grid.Column="1" Text="{Binding Text, ElementName=root}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter TargetName="Icon" Property="IconVariant" Value="Filled"/>
                        <Setter TargetName="Icon" Property="Foreground" Value="MediumPurple"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </RadioButton.Template>
    </RadioButton>
</UserControl>

