<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.Data.Entities"
             xmlns:pagemodels="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo.PageModels"
             x:Class="P07_01_DI_Contactos_TAPIADOR_rodrigo.Pages.PlaylistPage"
             Shell.NavBarIsVisible="False"
             xmlns:local="clr-namespace:P07_01_DI_Contactos_TAPIADOR_rodrigo"
             x:DataType="pagemodels:PlaylistPageModel">
    <VerticalStackLayout Padding="30,0" Spacing="25">
        <Label Text="{local:Localization EditPlaylist}" FontAttributes="Bold" FontSize="Title" />

        <Entry Text="{Binding Playlist.Title, Mode=TwoWay}" Placeholder="Título" />
        <Editor Text="{Binding Playlist.Description, Mode=TwoWay}" Placeholder="Descripción" />

        <Button Text="{local:Localization Save}" Command="{Binding SaveCommand}" />

        <Label Text="{local:Localization Songs}" FontAttributes="Bold" FontSize="Title" />
        <CollectionView ItemsSource="{Binding Songs}" SelectedItem="{Binding SelectedSong}" SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"  HorizontalItemSpacing="5" VerticalItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Song">
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Image 
                           Source="{Binding Album.Picture}" 
                           Aspect="AspectFill"
                           HeightRequest="60" 
                           WidthRequest="60" 
                           Grid.RowSpan="3"
                           Margin="0,0,10,0"/>
                        <Label 
                           Grid.Column="1"
                           Text="{Binding Title}" 
                           FontAttributes="Bold" />
                        <Label Grid.Row="1" 
                           Grid.Column="1"
                           Text="{Binding Album.Title}" 
                           FontSize="Caption"
                           Opacity="0.95"/>
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="{local:Localization AddFav}" Command="{Binding BindingContext.AddToFavoritesCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" CommandParameter="{Binding}" />
                                <MenuFlyoutItem Text="{local:Localization AddToPlaylist}" Command="{Binding BindingContext.AddToPlaylistCommand, Source={RelativeSource AncestorType={x:Type CollectionView}}}" CommandParameter="{Binding}" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>