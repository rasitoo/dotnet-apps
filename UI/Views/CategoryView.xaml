<UserControl x:Class="P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Views"
             mc:Ignorable="d" 
             xmlns:c="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.Controls"
             xmlns:vm="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.UI.ViewModels"
             xmlns:p="clr-namespace:P06_01_DI_Contactos_TAPIADOR_rodrigo.Properties"
             d:DataContext="{d:DesignInstance vm:CategoryViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/P06_01_DI_Contactos_TAPIADOR_rodrigo;component/UI/Themes/Generics.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Height="50" 
        Background="MediumPurple"
        Margin="0,0,0,10"
        Grid.ColumnSpan="2">
            <TextBlock Text="{x:Static p:Resources.Category}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
        <c:ListViewCategories ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedItem}" Grid.Row="1" VerticalAlignment="Top"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1">
            <StackPanel Grid.Row="1" Grid.Column="1">
                <Border BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock HorizontalAlignment="Left"  Text="{x:Static p:Resources.Category}" Grid.Row="0" Margin="10"/>
                        <TextBox  Text="{Binding CategoryName, Mode=TwoWay}" FontWeight="Bold"  Grid.Row="0" Grid.Column="1" Margin="10"/>

                        <TextBlock HorizontalAlignment="Left"  Text="{x:Static p:Resources.NavProducts}" Grid.Row="1" Margin="10"/>
                        <c:ListViewProducts ItemsSource="{Binding ProductsByCategory}" SelectedProduct="{Binding SelectedProduct}" Grid.Row="1" Grid.Column="1"/>



                    </Grid>
                </Border>

                <Button Content="{x:Static p:Resources.Save}" Command="{Binding SaveCommand}" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="150" Margin="0,25,0,0"/>
                <Button Content="{x:Static p:Resources.Delete}" Command="{Binding DeleteCommand}" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="150" Margin="5"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>